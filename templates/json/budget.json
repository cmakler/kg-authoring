{
  "schema": "econ",
  "version": 1,
  "aspectRatio": 2,
  "params": [
    {
      "name": "alpha",
      "value": 0.5,
      "min": 0.05,
      "max": 0.95,
      "round": "0.01"
    },
    {
      "name": "p1",
      "value": "3",
      "min": "0.1",
      "max": "10",
      "round": "0.01"
    },
    {
      "name": "a",
      "value": "0.5",
      "min": "0.05",
      "max": "0.95",
      "round": "0.001"
    },
    {
      "name": "p2",
      "value": "4",
      "min": "0.1",
      "max": "10",
      "round": "0.01"
    },
    {
      "name": "m",
      "value": "120",
      "min": "0",
      "max": "400",
      "round": "1"
    },
    {
      "name": "showMap",
      "value": false
    },
    {
      "name": "showBudgetSet",
      "value": true
    },
    {
      "name": "showPreferred",
      "value": true
    },
    {
      "name": "showDispreferred",
      "value": false
    },
    {
      "name": "utilityFn",
      "value": 1,
      "min": 1,
      "max": 3
    }
  ],
  "restrictions": [
    {
      "expression": "params.m/params.p1",
      "min": "1",
      "max": "100"
    },
    {
      "expression": "params.m/params.p2",
      "min": "1",
      "max": "100"
    }
  ],
  "objects": [
    {
      "type": "Graph",
      "def": {
        "xAxis": {
          "title": "Units of Good 1",
          "orient": "bottom",
          "domain": [
            0,
            100
          ],
          "range": [
            0.25,
            0.75
          ]
        },
        "yAxis": {
          "title": "Units of Good 2",
          "orient": "left",
          "domain": [
            0,
            100
          ],
          "range": [
            1,
            0
          ]
        },
        "objects": [
          {
            "type": "EconPreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "CobbDouglas",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 1 && params.showPreferred"
            }
          },
          {
            "type": "EconDispreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "CobbDouglas",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 1 && params.showDispreferred"
            }
          },{
            "type": "EconPreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "PerfectComplements",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 2 && params.showPreferred"
            }
          },
          {
            "type": "EconDispreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "PerfectComplements",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 2 && params.showDispreferred"
            }
          },{
            "type": "EconPreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "PerfectSubstitutes",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 3 && params.showPreferred"
            }
          },
          {
            "type": "EconDispreferredRegion",
            "def": {
              "utilityFunction": {
                "type": "PerfectSubstitutes",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "show": "params.utilityFn == 3 && params.showDispreferred"
            }
          },{
            "type": "EconIndifferenceMap",
            "def": {
              "show": "params.showMap && (params.utilityFn == 1)",
              "utilityFunction": {
                "type": "CobbDouglas",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "levels": [10,20,30,40,50,60,70,80,90],
              "label": "U_1"
            }
          },
          {
            "type": "EconIndifferenceCurve",
            "def": {
              "utilityFunction": {
                "type": "CobbDouglas",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "label": "U_1",
              "show": "params.utilityFn == 1"
            }
          },
          {
            "type": "EconIndifferenceMap",
            "def": {
              "show": "params.showMap && (params.utilityFn == 2)",
              "utilityFunction": {
                "type": "PerfectComplements",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "levels": [10,20,30,40,50,60,70,80,90],
              "label": "U_1"
            }
          },
          {
            "type": "EconIndifferenceCurve",
            "def": {
              "utilityFunction": {
                "type": "PerfectComplements",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "label": "U_1",
              "show": "params.utilityFn == 2"
            }
          },
          {
            "type": "EconIndifferenceMap",
            "def": {
              "show": "params.showMap && (params.utilityFn == 3)",
              "utilityFunction": {
                "type": "PerfectSubstitutes",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "levels": [10,20,30,40,50,60,70,80,90],
              "label": "U_1"
            }
          },
          {
            "type": "EconIndifferenceCurve",
            "def": {
              "utilityFunction": {
                "type": "PerfectSubstitutes",
                "def": {
                  "alpha": "params.alpha"
                }
              },
              "point": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "label": "U_1",
              "show": "params.utilityFn == 3"
            }
          },
          {
            "type": "EconBudgetLine",
            "def": {
              "p1": "params.p1",
              "p2": "params.p2",
              "m": "params.m",
              "label": "BL",
              "draggable": true,
              "handles": true,
              "set": "params.showBudgetSet"
            }
          },
          {
            "type": "Point",
            "def": {
              "coordinates": [
                "params.a*params.m/params.p1",
                "(1-params.a)*params.m/params.p2"
              ],
              "label": {
                "text": "X"
              },
              "drag": [
                {
                  "directions": "xy",
                  "param": "a",
                  "expression": "drag.x*params.p1/params.m"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "Sidebar",
      "def": {
        "title": "Parameters",
        "description": "Adjust the preference parameter, prices and income to see how the budget line changes.",
        "sliders": [
          {
            "param": "alpha",
            "label": "\\alpha"
          },
          {
            "param": "p1",
            "label": "p_1"
          },
          {
            "param": "p2",
            "label": "p_2"
          },
          {
            "param": "m",
            "label": "m"
          }
        ],
        "checkboxes": [
          {
            "param": "showMap",
            "label": "\\text{show indifference map}"
          },
          {
            "param": "showPreferred",
            "label": "\\text{show preferred bundles}"
          },
          {
            "param": "showDispreferred",
            "label": "\\text{show dispreferred bundles}"
          },
          {
            "param": "showBudgetSet",
            "label": "\\text{show budget set}"
          }
        ],
        "radios": [
          {
            "param": "utilityFn",
            "label": "\\text{Cobb-Douglas}",
            "optionValue": 1
          },
          {
            "param": "utilityFn",
            "label": "\\text{Perfect Complements}",
            "optionValue": 2
          },
          {
            "param": "utilityFn",
            "label": "\\text{Perfect Substitutes}",
            "optionValue": 3
          }
        ]
      }
    }
  ]
}